.container
  .row
    = render 'shared/errors', obj: @company
    = form_for(@company, :html => {class: "form-horizontal", role: "form" }) do |f|

      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :name
          %br/
        .col-md-4
          = f.text_field :name, class: "form-control", placeholder: "Company name", autofocus: true
      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :website
          %br/
        .col-md-4
          = f.text_field :website, class: "form-control", placeholder: "Website"
      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :description
          %br/
        .col-md-4
          = f.text_area :description, rows: 4, class: "form-control", placeholder: "Company description"
      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :company_size
          %br/
        .col-md-4
          = f.number_field :company_size, class: "form-control", placeholder: "Company size"
      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :founded
          %br/
        .col-md-4
          = f.number_field :founded, class: "form-control", placeholder: "Founded"
      .form-group
        .control-label.col-md-1.col-md-offset-3
          = f.label :headquarters
          %br/
        .col-md-4
          = f.text_field :headquarters, class: "form-control", placeholder: "Headquarters"
      .form-group
        .col-md-offset-4.col-md-4
          = f.submit(class: "btn btn-lg btn-primary")
