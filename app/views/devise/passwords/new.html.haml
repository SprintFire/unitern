.container
  .row
    .col-lg-6.col-lg-offset-3
      = bootstrap_devise_error_messages!
      .panel.panel-default
        .panel-heading
          %h4= t('.forgot_your_password', :default => 'Forgot your password?')
        .panel-body
          = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, role: "form" }) do |f|
            .form-group
              = f.label :email
              = f.email_field :email, autofocus: true, class: "form-control"
            = f.submit t('.send_me_reset_password_instructions', :default => "Reset"), class: "btn btn-primary"
      = render "devise/shared/links"
