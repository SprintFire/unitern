.navbar.navbar-default.navbar-static-top#unitern-navbar
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand(href="/") Unitern
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-left
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Company
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Companies", companies_path
            %li.divider{:role => "separator"}
            %li= link_to "Create Company", new_company_path
        %li.dropdown
          %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
            Internships
            %span.caret
          %ul.dropdown-menu
            %li= link_to "Internships", opportunities_path
            - unless current_user.companies.empty?
              %li.divider{:role => "separator"}
              %li= link_to "Create Internship", new_opportunity_path
      %ul.nav.navbar-nav.navbar-right
        %ul.nav.navbar-nav.navbar-left
          %li.dropdown
            %a.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              = current_user.email
              %span.caret
            %ul.dropdown-menu
              %li= link_to "Profile", "#"
              %li.divider{:role => "separator"}
              %li= link_to "Logout", destroy_user_session_path, method: :delete
